<% include ../partials/header %>

<div class="bg-light">
    <div class="container py-4">
      <div class="row">
        <div class="col-md-6 m-auto">
          <h1 class="text-center py-3">Create a New Campground</h1>
          <form action="/campgrounds" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Campground Name" name="campground[name]">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Campground Location" name="campground[location]">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Campground Price" name="campground[price]" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="image">Campground Image (Maximum 1 MB)</label>
                <input type="file" id="image" name="image" accept="image/*">
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" placeholder="Description" name="campground[description]" rows=7 ></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-info btn-lg btn-block">Submit</button>
            </div>
        </form>
        
        <a href="/campgrounds">Go back</a>
        </div>
      </div>
    </div>
</div>

<% include ../partials/footer %>