<% include ../partials/header %>

 <div>
    <div class="container py-4">
      <div class="row">
        <div class="col-md-6 m-auto">
          <h1 class="text-center py-3">Edit <%= foundCamp.name %></h1>
          <form action="/campgrounds/<%= foundCamp._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="text" value=<%= foundCamp.name%> name="name"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value=<%= foundCamp.location%> name="location"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value=<%= foundCamp.price%> name="price" min="0.01" step="0.01"></input>
            </div>
            <div class="form-group">
                <label for="image">Upload a new image if you want </label>
                <input id="image" class="form-control" type="file" name="image" accept="image/*">
            </div>
            <div class="form-group">
                <input class="form-control" type="textbox" value=<%= foundCamp.description%> name="description"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-info btn-lg btn-block">Submit</button>
            </div>
          </form>
        
        <a href="/campgrounds">Go back</a>
        </div>
      </div>
    </div>
  </div>
  
