<% include ./partials/header %>

<div>
    <div class="container py-4">
      <div class="row">
        <div class="col-md-6 m-auto">
          <h1 class="text-center py-3">Reset Password</h1>
          <form action="/reset/<%= token %>" method="POST">
                <div class="form-group">
                    <input class="form-control form-control-lg" type="password" name="password" value="" placeholder="New password" autofocus="autofocus">
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="password" name="confirm" value="" placeholder="Confirm password">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-lg btn-block">Update Password</button>
                </div>
          </form>
        </div>
      </div>
    </div>
</div>


<% include ./partials/footer %>