<% include ../partials/header %>

  <div>
    <div class="container py-4">
      <div class="row">
        <div class="col-md-6 m-auto">
          <h1 class="text-center py-3">Add New Comment to <%= foundCamp.name %></h1>
          <form action="/campgrounds/<%= foundCamp._id %>/comments" method="POST">
    
            <div class="form-group">
                <input class="form-control" type="text" placeholder="comment" name="comment[text]"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-info btn-lg btn-block">Submit</button>
            </div>
          </form>
        
          <a href="/campgrounds/<%= foundCamp._id %>">Go back</a>
        </div>
      </div>
    </div>
  </div>
