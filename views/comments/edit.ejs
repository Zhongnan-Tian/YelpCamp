<% include ../partials/header %>

  <div class="bg-light">
    <div class="container py-4">
      <div class="row">
        <div class="col-md-6 m-auto">
          <h1 class="text-center py-3">Edit Your Comment</h1>
          <form action="/campgrounds/<%= camp_id %>/comments/<%= comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="textbox" value="<%= comment.text%>" name="comment[text]"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-info btn-lg btn-block">Submit</button>
            </div>
          </form>
          
          <a href="/campgrounds/<%= camp_id %>/">Go back</a>
        </div>
      </div>
    </div>
  </div>


