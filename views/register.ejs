<% include ./partials/header %>

  <div>
    <div class="container py-4">
      <div class="row">
        <div class="col-md-6 m-auto">
          <h1 class="text-center py-3">Register</h1>
          <form action="/register" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="First Name" name="firstname"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Last Name" name="lastname"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Choose a Username" name="username"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="email" placeholder="Email" name="email"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" placeholder="Password" name="password"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-info btn-lg btn-block">Register</button>
            </div>
        </form>
        </div>
      </div>
    </div>
  </div>
